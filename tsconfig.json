{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "pretty": true,
        "strict": true,
        "outDir": "./build",
        //"outFile": "./build.js"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}